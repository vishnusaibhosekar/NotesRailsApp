<style>
.update-btn {
    width: 150px;
}
</style>

<div class="container mt-4">
    <div class="card">
        <div class="card-header">Edit Note</div>
        <div class="card-body">
        <%= form_for(@note) do |f| %>
            <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
            <%= f.label :content, class: "form-label" %>
            <%= f.text_area :content, class: "form-control", rows: 5 %>
            </div>

            <div class="d-grid">
            <%= f.submit "Update Note", class: "btn btn-primary update-btn" %>
            </div>
        <% end %>
        <%= link_to 'Back', notes_path, class: 'btn btn-secondary mt-3' %>
        </div>
    </div>
</div>
